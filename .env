# Переменные для PostgreSQL (используются и контейнером БД, и приложением FastAPI)
POSTGRES_USER=fastapi_user
POSTGRES_PASSWORD=fastapi_pass
POSTGRES_DB=fastapi_db
POSTGRES_HOST=db        # имя сервиса БД в docker-compose
POSTGRES_PORT=5432

# Настройки LLaMA/Ollama для бэкенда FastAPI
OLLAMA_URL=http://host.docker.internal:11434/api/generate
LLAMA_MODEL=llama3

# Переменная для фронтенда (URL базового API)
REACT_APP_API_BASE=/api
